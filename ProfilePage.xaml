<Page x:Class="_28._01ui.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_28._01ui"
      mc:Ignorable="d" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="ProfilePage">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="120*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="263*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <ui:Button
            Grid.Row="0"
            Grid.Column="0"
            Margin="10,10,0,0"
            BorderThickness="0"
            HorizontalAlignment="Left"
            Content="Назад"
            Click="btnBack"
            Height="35"
            Width="110"/>

        <TextBlock
            Grid.Row="2"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="FastLane Manager"
            Foreground="Gray"/>

        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Margin="10,10,0,0"
            Orientation="Vertical">
            <Image
                Name="profileimg"/>
            <TextBlock
            Name="TBlockName"
            Text="Имя аккаунта:"
            Foreground="White"/>
            <TextBlock
                Name="TBlockRole"
                Text="Ваша роль:"
                Foreground="White"/>
            <Button
                    Name="BtnLogOut"
                    Click="LogOut"
                    Content="Выйти" Height="30" Width="100"/>
            <Button
                    Name="BtnDocx"
                    Click="Btndoc"
                    Content="вывод в ворд" Height="30" Width="100"/>
        </StackPanel>

        <ui:DynamicScrollViewer
            Grid.Row="1"
            Grid.Column="1">
            <WrapPanel
            Name="TicketContainer"
            >
            <Border
                Width="260"
                Height="380"
                CornerRadius="8"
                Background="#FF313131">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="115"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border
                        CornerRadius="8,8,0,0"
                        Grid.Row="0">
                        <Border.Background>
                            <ImageBrush ImageSource="/images/EventImages/default.jpg"/>
                        </Border.Background>
                    </Border>

                    <!--<Image
                        Grid.Row="0"
                        Source="/images/EventImages/default.jpg"
                        Stretch="UniformToFill"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>-->
                    
                    <TextBlock
                        Grid.Row="1"
                        Text="Saratov Drift Cup 2025"
                        FontSize="20"
                        TextWrapping="Wrap"
                        FontWeight="Bold"
                        Foreground="White"
                        HorizontalAlignment="Center"/>
                    <TextBlock
                        Grid.Row="2"
                        Text="Саратов"
                        TextWrapping="Wrap"
                        Foreground="White"
                        HorizontalAlignment="Left"/>
                    <TextBlock
                        Grid.Row="3"
                        Text="23.02.2025"
                        TextWrapping="Wrap"
                        Foreground="White"
                        HorizontalAlignment="Left"/>
                    <TextBlock
                        Grid.Row="4"
                        Text="ЖенькаНагибатор"
                        TextWrapping="Wrap"
                        Foreground="White"
                        HorizontalAlignment="Left"/>
                    <TextBlock
                        Grid.Row="5"
                        Text="89020969284"
                        TextWrapping="Wrap"
                        Foreground="White"
                        HorizontalAlignment="Left"/>
                    <TextBlock
                        Grid.Row="6"
                        Text="500 рублей"
                        TextWrapping="Wrap"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"/>
                </Grid>
            </Border>
        </WrapPanel>
        </ui:DynamicScrollViewer>
        
        




    </Grid>
</Page>
