<Page x:Class="_28._01ui.designpage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_28._01ui"
      mc:Ignorable="d"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="designpage">

    <Grid
        Name="animGrid">
        <Grid.RenderTransform>
            <TranslateTransform Y="20"/>
        </Grid.RenderTransform>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>

        <StackPanel
            Orientation="Vertical"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Left"
            Margin="0,0,0,10"
            Grid.Column="1"
            Grid.Row="0">
            <ui:TextBlock
                Foreground="White"
                Text="События"
                FontSize="36"
                FontWeight="SemiBold"/>
            <ui:TextBlock
                Foreground="White"
                Text="Просмотр и редактирование событий"
                FontSize="14"/>
        </StackPanel>

        <StackPanel
            Orientation="Horizontal"
            VerticalAlignment="Bottom"
            Margin="0,0,0,10"
            HorizontalAlignment="Right"
            Grid.Column="1"
            Grid.Row="0" Cursor="IBeam">
            <ui:TextBox
                Name="SearchBox"
                Height="35"
                BorderThickness="0"
                PlaceholderText="Поиск"
                Width="230"
                Background="#19FFFFFF"
                TextChanged="SearchBox_TextChanged"/>
            <ui:Button
                Name="btnAdd"
                Height="35"
                Width="35"
                BorderThickness="0"
                Margin="10,0,0,0"
                Background="#19FFFFFF"
                Click="btnAdd_Click"
                Cursor="Arrow">
                <ui:SymbolIcon
            Symbol="Add20"/>
            </ui:Button>
        </StackPanel>

        <WrapPanel
            Grid.Column="1"
            Grid.Row="1"
            Name="EventContainer">
            <Border
                Margin="0,0,10,20"
                CornerRadius="10"
                Height="220"
                Width="410">
                <StackPanel
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Left"
                    Margin="5"
                    Orientation="Vertical">
                    <ui:TextBlock
                        Text="EventDate"
                        FontSize="24"
                        Foreground="White"/>
                    <ui:TextBlock
                        FontSize="48"
                        Text="EventName"
                        FontWeight="Bold"
                        Foreground="White"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Left"
                        TextWrapping="Wrap"/>
                </StackPanel>
                <Border.Background>
                    <ImageBrush ImageSource="/images/BackImages/1.jpg" Stretch="UniformToFill"/>
                </Border.Background>
            </Border>
        </WrapPanel>
        
    </Grid>
</Page>
