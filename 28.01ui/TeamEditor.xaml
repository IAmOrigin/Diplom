<Page x:Class="_28._01ui.TeamEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_28._01ui"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="TeamEditor">

    <Grid
        Name="animGrid">

        <Grid.RenderTransform>
            <TranslateTransform Y="20"/>
        </Grid.RenderTransform>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Margin="60,20,60,0"
            Name="bunnerimg"
            CornerRadius="8">
            <Border.Background>
                <ImageBrush
                    Stretch="UniformToFill"/>
            </Border.Background>

            <ui:Button
                CornerRadius="8"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="#07FFFFFF"
                Click="ButtonBunner">
                <TextBlock
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Foreground="White"
                    Text="+"
                    FontSize="32"/>
            </ui:Button>
        </Border>

        <StackPanel
            Margin="60,10,0,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Orientation="Horizontal"
            Grid.Row="1">
            <Border
                Name="logoimg"
                CornerRadius="8"
                Height="250"
                Width="250">
                <Border.Background>
                    <ImageBrush
                        Stretch="UniformToFill"/>
                </Border.Background>
                <ui:Button
                    CornerRadius="8"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="#07FFFFFF"
                    Click="ButtonLogo">
                <TextBlock
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Foreground="White"
                    Text="+"
                    FontSize="32"/>
            </ui:Button>
            </Border>
            <StackPanel
                Margin="10,0,0,0"
                Orientation="Vertical">
                <ui:TextBox
                    Height="34"
                    Width="300"
                    PlaceholderText="Название"
                    Name="tboxName"
                    BorderThickness="0"
                    Margin="0,0,0,10"/>
                <ui:TextBox
                    PlaceholderText="Страна"
                    Height="34"
                    Name="tboxCountry"
                    BorderThickness="0"/>
            </StackPanel>
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Orientation="Horizontal"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Right"
            Margin="10">
            <TextBlock
                Foreground="Coral"
                VerticalAlignment="Center"
                Name="Warn"
                Margin="0,0,10,0"/>
            <ui:Button
                BorderThickness="0"
                Content="Сохранить"
                Margin="0,0,10,0"
                Appearance="Transparent" Click="ButtonSave"/>
            <ui:Button
                BorderThickness="0"
                Content="Отмена"
                Appearance="Transparent" Click="ButtonCancel"/>
        </StackPanel>

    </Grid>
</Page>
