<Page x:Class="_28._01ui.Pages.EventViewer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_28._01ui.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="EventViewer"
      Language="ru-RU">

    <Page.Resources>
        <DataTemplate
            x:Key="EventTemplate">
            <Grid
                Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="8*"/>
                    <ColumnDefinition
                        Width="10*"/>
                    <ColumnDefinition
                        Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="0,0,0,10"
                    TextWrapping="Wrap"
                    Text="{Binding EventName}"
                    FontSize="32"
                    FontWeight="SemiBold"/>
                <ui:Button
                    Click="ButtonBuyTicket"
                    Grid.Column="2"
                    Grid.Row="0"
                    HorizontalAlignment="Right"
                    Content="Купить билет"
                    Width="150"
                    Appearance="Primary"/>
                <StackPanel
                    Orientation="Vertical"
                    Grid.Row="1"
                    Grid.Column="0">
                    <TextBlock
                        FontSize="18"
                        Text="{Binding EventDate, StringFormat='dd MMMM yyyy'}"
                        Margin="0,0,0,10"/>
                    <TextBlock
                        FontSize="18"
                        Text="{Binding Location}"
                        Margin="0,0,0,10"/>
                    <TextBlock
                        FontSize="16"
                        Text="{Binding EventType.TypeName}"
                        Margin="0,0,0,10"/>
                    <TextBlock
                        TextWrapping="Wrap"
                         Text="{Binding EventDesc}"/>
                </StackPanel>
                <Image
                    Grid.Row="1"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Stretch="Uniform"
                    Margin="10"
                    Source="/images/ProfileImages/admin.jpg" />
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <ui:DynamicScrollViewer>
        <Grid
            Name="animGrid">
            <Grid.RenderTransform>
                <TranslateTransform Y="20"/>
            </Grid.RenderTransform>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="240"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Image
                Name="bunner"
                Grid.Row="0"
                Grid.ColumnSpan="3"
                Stretch="UniformToFill"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>

            <ItemsControl
                Name="EventContainer"
                Grid.Row="1"
                Grid.Column="1"
                ItemTemplate="{StaticResource EventTemplate}">
            </ItemsControl>

            <StackPanel
                Name="adminPanel"
                Orientation="Horizontal"
                Grid.Row="0"
                Grid.Column="1"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Margin="0,0,10,10">
                <ui:Button
                    Name="btnEdit"
                    Height="40"
                    Width="40"
                    BorderThickness="0"
                    Margin="0,0,10,0"
                    Click="btnEdit_Click"
                    Cursor="Arrow">
                    <ui:SymbolIcon
                        Symbol="Edit20"/>
                </ui:Button>
                <ui:Button
                    Name="btnDelete"
                    Height="40"
                    Width="40"
                    BorderThickness="0"
                    Margin="0,0,0,0"
                    Click="btnDelete_Click"
                    Cursor="Arrow">
                    <ui:SymbolIcon
                        Symbol="Delete20"/>
                </ui:Button>
            </StackPanel>

        </Grid>
    </ui:DynamicScrollViewer>
</Page>
