<Page x:Class="_28._01ui.Pages.EventViewer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_28._01ui.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1440"
      Title="EventViewer"
      Language="ru-RU">

    <ui:DynamicScrollViewer>
        <Grid
            Name="animGrid">
            <Grid.RenderTransform>
                <TranslateTransform Y="20"/>
            </Grid.RenderTransform>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="240"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Image
                Name="bunner"
                Grid.Row="0"
                Grid.ColumnSpan="3"
                Stretch="UniformToFill"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>

            <Grid
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="8*"
                        MinWidth="380"/>
                    <ColumnDefinition
                        Width="10*"/>
                    <ColumnDefinition
                        Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="0,0,0,10"
                    TextWrapping="Wrap"
                    Text="EventName"
                    Name="eventName"
                    FontSize="36"
                    FontWeight="SemiBold"/>
                <TextBlock
                    Name="textBlockNoBuy"
                    Margin="20"
                    Grid.Column="2"
                    Grid.Row="0"
                    Text="Проход бесплатный"/>
                <ui:Button
                    Name="buttonBuy"
                    Click="ButtonBuyTicket"
                    Grid.Column="2"
                    Grid.Row="0"
                    HorizontalAlignment="Right"
                    Content="Купить билет"
                    Width="150"
                    Appearance="Primary"/>
                <StackPanel
                    Orientation="Vertical"
                    Grid.Row="1"
                    Grid.Column="0">
                    <Border
                        CornerRadius="10"
                        Background="{DynamicResource AppBackgroundColor}">
                        <TextBlock
                            Margin="20"
                            Name="eventDesc"
                            TextWrapping="Wrap"
                            Text="EventDesc"/>
                    </Border>
                    <Border
                        Margin="0,20,0,0"
                        CornerRadius="10"
                        Background="{DynamicResource AppBackgroundColor}">
                        <StackPanel
                            Orientation="Horizontal"
                            Margin="20">
                            <ui:SymbolIcon
                                Symbol="FastAcceleration20"
                                FontSize="36"
                                Foreground="{DynamicResource AppTextColor}"/>
                            <TextBlock
                                
                                VerticalAlignment="Center"
                                Name="eventType"
                                FontSize="18"
                                Text="EventType"
                                Margin="20,0,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <Border
                        Margin="0,20,0,0"
                        CornerRadius="10"
                        Background="{DynamicResource AppBackgroundColor}">
                        <Grid>
                            <StackPanel
                                Orientation="Horizontal"
                                Margin="20">
                                <ui:SymbolIcon
                                    Foreground="{DynamicResource AppTextColor}"
                                    Symbol="Location20"
                                    FontSize="36"/>
                                <StackPanel
                                    Margin="20,0,0,0"
                                    Orientation="Vertical">
                                    <TextBlock
                                        Name="eventLocation"
                                        FontSize="18"
                                        Text="EventLocation"/>
                                    <TextBlock
                                        Name="eventDateTime"
                                        FontSize="18"
                                        Text="EventDateTime"/>
                                </StackPanel>

                            </StackPanel>
                            <TextBlock
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Margin="0,0,20,0"
                                Name="eventDate"
                                FontSize="24"
                                Text="EventDate"/>
                        </Grid>
                        
                    </Border>
                    
                    
                    
                    
                </StackPanel>

            </Grid>

            <StackPanel
                Name="adminPanel"
                Orientation="Horizontal"
                Grid.Row="0"
                Grid.Column="1"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="0,190,10,0">
                <ui:Button
                    Name="btnEdit"
                    Height="40"
                    Width="40"
                    BorderThickness="0"
                    Margin="0,0,10,0"
                    Click="btnEdit_Click"
                    Cursor="Arrow">
                    <ui:SymbolIcon
                        Symbol="Edit20"/>
                </ui:Button>
                <ui:Button
                    Name="btnDelete"
                    Height="40"
                    Width="40"
                    BorderThickness="0"
                    Margin="0,0,0,0"
                    Click="btnDelete_Click"
                    Cursor="Arrow">
                    <ui:SymbolIcon
                        Symbol="Delete20"/>
                </ui:Button>
            </StackPanel>
        </Grid>
    </ui:DynamicScrollViewer>
</Page>
