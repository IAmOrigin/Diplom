<Page x:Class="_28._01ui.ArchivePage"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_28._01ui"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="EventPage">

    <Grid Name="animGrid">

        <Grid.RenderTransform>
            <TranslateTransform Y="20"/>
        </Grid.RenderTransform>

        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
            <RowDefinition Height="55"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid
    Grid.Row="0"
    Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ui:Button
        Grid.Column="0"
        Margin="10,10,0,0"
        Height="35"
        BorderThickness="0"
        Click="BtnBack"
        Content="Назад"
        HorizontalAlignment="Stretch"/>
            <ui:TextBox
        Name="SearchBox"
        Margin="10,10,0,0"
        Grid.Column="1"
        Height="35"
        HorizontalAlignment="Stretch"
            PlaceholderText="Поиск события"
            TextChanged="SearchBox_TextChanged"/>
        </Grid>

        <ui:ListView
    Margin="10,10,0,0"
    Grid.Column="0"
    Grid.Row="1"
    d:ItemsSource="{d:SampleData ItemCount=5}"
    BorderThickness="0"
    Name="LViewEvents"
        SelectionChanged="LViewEvents_SelectionChanged" SelectionMode="Single">
            <ui:ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel
                Orientation="Vertical">
                        <TextBlock
                Margin="5, 0,0,0"
                FontSize="16"
                FontWeight="Bold"
                Text="{Binding EventName}" />
                        <TextBlock
                Margin="5,0,0,0"
                FontSize="14"
                Text="{Binding EventDate, StringFormat={}{0:dd.MM.yyyy}}" />
                        <StackPanel
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                            <ui:Button
                                Click="results"
                                Content="Результаты"
                                BorderThickness="0"
                                Margin="0,10,10,10"/>
                            <ui:Button
                        Click="BtnDelete"
                        Margin="0,10,10,10"
                        Content="Удалить"
                        BorderThickness="0"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ui:ListView.ItemTemplate>
        </ui:ListView>

        <Grid
    Grid.Column="0"
    Grid.Row="2">
            
            <TextBlock
        Margin="10"
        Name="Warn"
        TextWrapping="Wrap"
        Foreground="Coral"
        Text="Ошибки"
        VerticalAlignment="Center"
        HorizontalAlignment="Stretch"/>
            
        </Grid>

        <ui:DynamicScrollViewer
    Grid.Column="1"
    Grid.RowSpan="3">
            <StackPanel
    Margin="10"
    
    Orientation="Vertical">
                <Viewbox>
                    <Image
        Name="eventImg"
        Stretch="Uniform"
        Height="427"/>
                </Viewbox>

                <TextBlock
        Name="eventName"
        Margin="0,10,0,0"
        TextWrapping="Wrap"
        Text=""
        Foreground="White"/>

                <TextBlock
        Name="eventDate"
        Margin="0,10,0,0"
        TextWrapping="Wrap"
        Text=""
        Foreground="White"/>

                <TextBlock
        Name="eventLocation"
        Margin="0,10,0,0"
        TextWrapping="Wrap"
        Text=""
        Foreground="White"/>

                <TextBlock
        Name="eventType"
        Margin="0,10,0,0"
        TextWrapping="Wrap"
        Text=""
        Foreground="White"/>

                <TextBlock
        Name="eventDesc"
        Margin="0,10,0,0"
        TextWrapping="Wrap"
        Text=""
        Foreground="White"/>
            </StackPanel>
        </ui:DynamicScrollViewer>

        <TextBlock
    Name="selectEvent"
    Text="Выберите интересующее событие"
    Foreground="#FFA7A5A5"
    Grid.Column="1"
    Grid.RowSpan="3"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"/>
    </Grid>
</Page>
