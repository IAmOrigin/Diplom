<Page x:Class="_28._01ui.TeamViewer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_28._01ui"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" d:DesignWidth="1440"
      Title="TeamViewer" d:DesignHeight="900">

    <ui:DynamicScrollViewer>
        <Grid
            Name="animGrid">

            <Grid.RenderTransform>
                <TranslateTransform Y="20"/>
            </Grid.RenderTransform>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="240"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Image
                Name="bunner"
                Grid.Row="0"
                Grid.ColumnSpan="3"
                Stretch="UniformToFill"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>


            <StackPanel
                Orientation="Vertical"
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="0,0,0,10">
                <TextBlock
                    Text="Команда"
                    Foreground="White"/>
                <TextBlock
                    Name="textblockteamname"
                    Text="APEX"
                    Foreground="White"
                    FontSize="32"
                    FontWeight="SemiBold"/>
            </StackPanel>

            <StackPanel
                Orientation="Horizontal"
                Grid.Row="0"
                Grid.Column="1"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Margin="0,0,10,10">
                <ui:Button
                Name="btnEdit"
                Height="40"
                Width="40"
                BorderThickness="0"
                Margin="0,0,10,0"
                Click="btnEdit_Click"
                Cursor="Arrow">
                <ui:SymbolIcon
                    Symbol="Edit20"/>
            </ui:Button>
                <ui:Button
                Name="btnDelete"
                Height="37"
                Width="37"
                BorderThickness="0"
                Margin="0,0,0,0"
                Click="btnDelete_Click"
                Cursor="Arrow">
                <ui:SymbolIcon
                    Symbol="Delete20"/>
            </ui:Button>
            </StackPanel>


            <Grid
                Name="animGrid1"
                Grid.Row="1"
                Grid.Column="1">
                <Grid.RenderTransform>
                    <TranslateTransform Y="20"/>
                </Grid.RenderTransform>
                
                <StackPanel
                Orientation="Vertical"
                Height="auto">
                <TextBlock
                    Text="Участники"
                    FontSize="18"
                    Margin="0,10"
                    Foreground="White"/>
                <WrapPanel
                    MinHeight="330"
                    Name="pilotscontainer"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">

                    <ui:Button
                        CornerRadius="500"
                        Height="240"
                        Width="240"
                        BorderThickness="0" Background="Transparent">
                        <TextBlock
                            Margin="0,0,2,12"
                            Text="+"
                            FontSize="48" Foreground="#33FFFFFF"/>
                    </ui:Button>
                    
                </WrapPanel>
            </StackPanel>
            </Grid>
        </Grid>
    </ui:DynamicScrollViewer>
</Page>
