<Page x:Class="_28._01ui.RatingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_28._01ui"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="EventPage">
    <Page.Resources>
        <local:IndexConverter x:Key="IndexConverter"/>
    </Page.Resources>
    <ui:DynamicScrollViewer>
    <Grid Name="animGrid">

        <Grid.RenderTransform>
            <TranslateTransform Y="20"/>
        </Grid.RenderTransform>

        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid
            Grid.Row="0"
            Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>

        <Grid
            Grid.Row="0"
            Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                Margin="10,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Выбранное событие:"
                TextWrapping="Wrap"
                Foreground="White"/>

            <ComboBox
                Grid.Column="1"
                Margin="10,10,10,0"
                Name="cboxevents"
                SelectionChanged="cboxevents_SelectionChanged"
                Height="35"/>

        </Grid>

        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Name="selectHelper"
            Text="Выберите интересующее событие"
            Foreground="#FFA7A5A5"/>
            <Grid
                Name="animGrid1"
                Grid.Row="1"
                Grid.Column="1">
                <Grid.RenderTransform>
                    <TranslateTransform Y="20"/>
                </Grid.RenderTransform>
                <StackPanel
            
            Margin="0,10,0,0"
            Orientation="Vertical" CanVerticallyScroll="True">
            <Grid
                Margin="10,10,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="1.3*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    Foreground="White"
                    Text="#"/>
                <TextBlock
                    Grid.Column="1"
                    Foreground="White"
                    Text="Имя"/>
                <TextBlock
                    Grid.Column="2"
                    Foreground="White"
                    Text="Очки"/>
                <TextBlock
                    Grid.Column="3"
                    Foreground="White"
                    Text="Время"/>
                <TextBlock
                    Grid.Column="4"
                    Foreground="White"
                    Text="Страна"/>
            </Grid>
            <ui:Button
                Name="addResultButton"
                HorizontalAlignment="Stretch"
                BorderThickness="0"
                CornerRadius="8"
                Height="80"
                Background="#33000000"
                Margin="0,10,0,0" Click="addResultButton_Click">
                <TextBlock
                    Foreground="#7FFFFFFF"
                    Text="+"
                    FontSize="38"/>
            </ui:Button>
                    <ui:ListView
            Margin="0,10,0,0"
            d:ItemsSource="{d:SampleData ItemCount=5}"
            Grid.Row="1"
            Grid.Column="1"
            Name="listviewrating">
                <ui:ListView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            CornerRadius="8"
                            Height="80"
                            Background="#33000000">
                            <ui:Button
                                Click="editResultClick"
                                BorderThickness="0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Appearance="Transparent"
                                HorizontalContentAlignment="Stretch"
                                MouseOverBackground="#0AFFFFFF">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="1.3*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                         Name="TextBlock123"
                                        Grid.Column="0"
                                        FontSize="22"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,10,0"
                                        Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}, Converter={StaticResource IndexConverter}}"/>
                                <TextBlock
                                        FontSize="18"
                                        VerticalAlignment="Center"
                                        Grid.Column="1"
                                        Text="{Binding Pilots.PilotName}"/>
                                <TextBlock
                                        FontSize="18"
                                        FontWeight="Medium"
                                        VerticalAlignment="Center"
                                        Grid.Column="2"
                                        Text="{Binding Points}"/>
                                <TextBlock
                                        FontSize="18"
                                        FontWeight="Medium"
                                        VerticalAlignment="Center"
                                        Grid.Column="3"
                                        Text="{Binding Time}"/>
                                <TextBlock
                                        FontSize="18"
                                        VerticalAlignment="Center"
                                        Grid.Column="4"
                                        Text="{Binding Pilots.Teams.TeamCountry}"/>
                            </Grid>
                            </ui:Button>
                        </Border>
                    </DataTemplate>
                </ui:ListView.ItemTemplate>
            </ui:ListView>
        </StackPanel>
            </Grid>
        </Grid>
    </ui:DynamicScrollViewer>
</Page>
