<Page x:Class="_28._01ui.RatingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_28._01ui"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="EventPage">
    <Page.Resources>

    </Page.Resources>
    <ui:DynamicScrollViewer>
        <Grid Name="animGrid">
            <Grid.RenderTransform>
                <TranslateTransform Y="20"/>
            </Grid.RenderTransform>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>
            <StackPanel
                Orientation="Vertical"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left"
                Margin="0,0,0,10"
                Grid.Column="1"
                Grid.Row="0">
                <TextBlock
                    Text="Таблица лидеров"
                    FontSize="36"
                    FontWeight="SemiBold"/>
                <TextBlock
                    Text="Просмотр результатов событий"/>
            </StackPanel>

            <StackPanel
                Orientation="Horizontal"
                VerticalAlignment="Bottom"
                Margin="0,0,0,10"
                HorizontalAlignment="Right"
                Grid.Column="1"
                Grid.Row="0"
                Cursor="IBeam">
                <ui:TextBox
                    x:Name="SearchBox"
                    Height="35"
                    BorderThickness="0"
                    PlaceholderText="Поиск"
                    Width="230"
                    />
                <ui:Button
                    x:Name="btnAdd"
                    Height="35"
                    Width="35"
                    BorderThickness="0"
                    Margin="10,0,0,0"
                    Click="btnAdd_Click"
                    Cursor="Arrow">
                    <ui:SymbolIcon
                        Symbol="Add20"/>
                </ui:Button>
            </StackPanel>

            <DataGrid
                Name="dataGridResults"
                Grid.Row="1"
                Grid.Column="1">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Header="#"
                        />
                    <DataGridTextColumn
                        Header="Пилот"
                        Binding="{Binding Pilots.PilotName}"/>
                    <DataGridTextColumn
                        Header="Автомобиль"
                        Binding="{Binding Pilots.PilotCar.FirstCarName}"/>
                    <DataGridTextColumn
                        Header="Время"
                        Binding="{Binding Time}"/>
                    <DataGridTextColumn
                        Header="Очки"
                        Binding="{Binding Points}"/>
                    <DataGridTextColumn
                        Header="Страна"
                        Binding="{Binding Pilots.Teams.TeamCountry}"/>
                </DataGrid.Columns>
            </DataGrid>
            
        </Grid>
    </ui:DynamicScrollViewer>
</Page>
