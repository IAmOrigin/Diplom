<Page x:Class="_28._01ui.RatingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_28._01ui"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1440"
      Title="EventPage">
    <Page.Resources>
        <DataTemplate
            x:Key="eventButtons">
            <ui:Button
                Height="35"
                VerticalAlignment="Top"
                Margin="20,20,0,0"
                MinWidth="120"
                BorderThickness="0"
                Click="event_Click">
                <ui:Button.Content>
                    <TextBlock
                        Margin="10,0"
                        Text="{Binding EventName}"/>
                </ui:Button.Content>
            </ui:Button>
        </DataTemplate>
    </Page.Resources>
    <ui:DynamicScrollViewer>
        <Grid Name="animGrid">
            <Grid.RenderTransform>
                <TranslateTransform Y="20"/>
            </Grid.RenderTransform>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>
            <StackPanel
                Orientation="Vertical"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left"
                Grid.Column="1"
                Grid.Row="0">
                <TextBlock
                    Text="Таблица лидеров"
                    FontSize="36"
                    FontWeight="SemiBold"/>
                <TextBlock
                    Text="Просмотр результатов событий"/>
            </StackPanel>

            <StackPanel
                Orientation="Horizontal"
                VerticalAlignment="Bottom"
                Margin="0,0,0,10"
                HorizontalAlignment="Right"
                Grid.Column="1"
                Grid.Row="0"
                Cursor="IBeam">
                <ui:TextBox
                    x:Name="SearchBox"
                    Height="35"
                    BorderThickness="0"
                    PlaceholderText="Поиск"
                    Width="230"/>
                <ui:Button
                    x:Name="btnAdd"
                    Height="35"
                    Width="35"
                    BorderThickness="0"
                    Margin="10,0,0,0"
                    Click="btnAdd_Click"
                    Cursor="Arrow">
                    <ui:SymbolIcon
                        Symbol="Add20"/>
                </ui:Button>
            </StackPanel>

            <StackPanel
                Margin="0,20,0,0"
                Orientation="Vertical"
                Grid.Row="1"
                Grid.Column="1">
                <Border
                    Height="80"
                    CornerRadius="10"
                    Background="{DynamicResource AppBackgroundColor}">
                    <ScrollViewer
                        HorizontalScrollBarVisibility="Visible"
                        VerticalScrollBarVisibility="Disabled">
                        <ItemsControl
                            x:Name="eventButtonsContainer"
                            ItemTemplate="{StaticResource eventButtons}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel
                                        Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                    
                </Border>
                <Border
                    Name="ratingBorder"
                    Margin="0,20,0,20"
                    CornerRadius="10"
                    Background="{DynamicResource AppBackgroundColor}">
                    <DataGrid
                        IsHitTestVisible="False"
                        Margin="20"
                        Name="dataGridResults"
                        GridLinesVisibility="None"
                        AlternationCount="2"
                        RowHeight="55"
                        AlternatingRowBackground="{DynamicResource AppBackgroundColor}"
                        RowBackground="{DynamicResource AppDialogColor}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Header="#"
                                Width="auto"
                                Binding="{Binding Position}"/>
                            <DataGridTextColumn
                                Header="Пилот"
                                Width="*"
                                Binding="{Binding Pilots.PilotName}"/>
                            <DataGridTextColumn
                                Header="Автомобиль"
                                Width="*"
                                Binding="{Binding Pilots.PilotCar.Name}"/>
                            <DataGridTextColumn
                                Header="Время"
                                Width="auto"
                                Binding="{Binding Time, StringFormat={}{0:mm\\:ss}}"/>
                            <DataGridTextColumn
                                Header="Очки"
                                Width="auto"
                                Binding="{Binding Points}"/>
                            <DataGridTextColumn
                                Header="Страна"
                                Width="*"
                                Binding="{Binding Pilots.Teams.TeamCountry}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
                
            </StackPanel>
            <TextBlock
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Opacity="0.5"
                Grid.Row="1"
                Grid.Column="1"
                Name="textBlockInfo"
                Text="Выберите интересующее событие"/>


        </Grid>
    </ui:DynamicScrollViewer>
</Page>
