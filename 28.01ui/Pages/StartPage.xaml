<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_28._01ui"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:Classes="clr-namespace:_28._01ui.Classes"
      x:Class="_28._01ui.StartPage"
      
      mc:Ignorable="d" 
      d:DesignHeight="1080"
      d:DesignWidth="1920"
      Title="StartPage">

    <Page.Resources>
        <Classes:Sub20WidthConverter x:Key="Sub20WidthConverter"/>
    </Page.Resources>

    <Grid
        x:Name="animGrid" Background="#7F000000">

        <Grid.RenderTransform>
            <TranslateTransform Y="20"/>
        </Grid.RenderTransform>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition
            Height="auto"/>
            <RowDefinition
            Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image
            x:Name="imageDisplay"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Stretch="UniformToFill"
            Source="/images/ImageSlider/1.jpg"
            Grid.RowSpan="3"
            Grid.ColumnSpan="4">
            <Image.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.849"/>
                    <GradientStop Color="Transparent" Offset="0.959"/>
                </LinearGradientBrush>
            </Image.OpacityMask>
        </Image>
        <StackPanel
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Orientation="Vertical"
            VerticalAlignment="Bottom"
            Margin="10">
            <TextBlock
                Foreground="White"
                Text="Добро пожаловать"
                FontSize="16"/>
            <TextBlock
                Foreground="White"
                Text="FastLane World"
                FontSize="34"
                FontWeight="Bold"/>
        </StackPanel>

        <ui:Button
            Click="RaceBtn"
            Grid.Column="0"
            Grid.Row="2"
            BorderThickness="0"
            Margin="10,10,5,10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Left">
            <StackPanel
                Margin="10"
                Orientation="Horizontal">
                <ui:SymbolIcon
                    Symbol="FastAcceleration20"
                    FontSize="44"
                    Margin="0,0,10,0"/>
                <StackPanel Orientation="Vertical">
                    <TextBlock
                        FontSize="16"
                        Text="События"/>
                    <TextBlock
                        FontSize="14"
                        TextWrapping="Wrap"
                        Text="Предстоящие события"
                        Opacity="0.5"/>
                </StackPanel>
            </StackPanel>
        </ui:Button>
        
        <ui:Button
        Click="RatingBtn"
        Grid.Column="1"
        Grid.Row="2"
        BorderThickness="0"
        Margin="5,10"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        HorizontalContentAlignment="Left">
            <StackPanel
            Margin="10"
            Orientation="Horizontal">
                <ui:SymbolIcon
                Symbol="Poll20"
                FontSize="44"
                Margin="0,0,10,0"/>
                <StackPanel Orientation="Vertical">
                    <TextBlock
                    FontSize="16"
                    Text="Рейтинг"/>
                    <TextBlock
                    FontSize="14"
                    TextWrapping="Wrap"
                    Opacity="0.5"
                    Text="Таблица лидеров"/>
                </StackPanel>
            </StackPanel>
        </ui:Button>
        <ui:Button
        Click="TeamsBtn"
        Grid.Column="2"
        Grid.Row="2"
        BorderThickness="0"
        Margin="5,10,10,10"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        HorizontalContentAlignment="Left">
            <StackPanel
            Margin="10"
            Orientation="Horizontal">
                <ui:SymbolIcon
                Symbol="PeopleTeam20"
                FontSize="44"
                Margin="0,0,10,0"/>
                <StackPanel Orientation="Vertical">
                    <TextBlock
                    FontSize="16"
                    Text="Команды"/>
                    <TextBlock
                    FontSize="14"
                    TextWrapping="Wrap"
                    Opacity="0.5"
                    Text="Команды и их состав"/>
                </StackPanel>
            </StackPanel>
        </ui:Button>
    </Grid>
</Page>
