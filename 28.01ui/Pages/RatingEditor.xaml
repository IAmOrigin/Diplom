<Page x:Class="_28._01ui.RatingEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_28._01ui"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1400"
      Title="RatingEditor">

    <ui:DynamicScrollViewer>
        <Grid Name="animGrid">

            <Grid.RenderTransform>
                <TranslateTransform Y="20"/>
            </Grid.RenderTransform>
            
            <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="220"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image
            Stretch="UniformToFill"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Name="eventBunner"/>

        <TextBlock
            Name="textblockEventName"
            Text="EventName"
            Grid.Row="0"
            Grid.Column="1"
            Foreground="White"
            FontSize="32"
            FontWeight="SemiBold"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Left"
            Margin="0,0,0,10"/>

        <TextBlock
            Foreground="White"
            Name="tblockEvent"
            Grid.Row="0"
            Grid.Column="1" Margin="0,0,0,54"/>
            <Grid
                Name="animGrid1"
                Grid.Row="1"
                Grid.Column="1">    
                <Grid.RenderTransform>
                    <TranslateTransform Y="20"/>
                </Grid.RenderTransform>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition 
                        MinWidth="230"
                        Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock
                Margin="0,10,0,0"
                Name="enterhelper1"
                Grid.Row="0"
                Grid.Column="0"
                Foreground="White"
                Text="Выберите команду"/>

                <ui:ListView
                Margin="0,10"
                Width="250"
                Height="280"
                Name="listviewTeams"
                Grid.Row="1"
                Grid.Column="0"
                SelectionChanged="listviewTeams_SelectionChanged"
                d:ItemsSource="{d:SampleData ItemCount=5}">
                    <ui:ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel
                            Orientation="Horizontal">
                                <Border
                                CornerRadius="100"
                                Height="70"
                                Width="70">
                                    <Border.Background>
                                        <ImageBrush ImageSource="{Binding TeamLogo}"/>
                                    </Border.Background>
                                </Border>
                                <TextBlock
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Text="{Binding TeamName}"
                                Foreground="White"
                                FontWeight="Medium"/>
                            </StackPanel>
                        </DataTemplate>
                    </ui:ListView.ItemTemplate>
                </ui:ListView>

                <TextBlock
                Name="enterhelper2"
                Grid.Row="2"
                Grid.Column="0"
                Foreground="White"
                Text="Выберите пилота"/>

                <ui:ListView
                Margin="0,10"
                Width="250"
                Height="280"
                Name="listviewPilots"
                Grid.Row="3"
                Grid.Column="0"
                SelectionChanged="listviewPilots_SelectionChanged"
                d:ItemsSource="{d:SampleData ItemCount=5}">
                    <ui:ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel
                            Orientation="Horizontal">
                                <Border
                                CornerRadius="100"
                                Height="70"
                                Width="70">
                                    <Border.Background>
                                        <ImageBrush ImageSource="{Binding PilotImg}"/>
                                    </Border.Background>
                                </Border>
                                <TextBlock
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Text="{Binding PilotName}"
                                Foreground="White"
                                FontWeight="Medium"/>
                            </StackPanel>
                        </DataTemplate>
                    </ui:ListView.ItemTemplate>
                </ui:ListView>

                <TextBlock
                Margin="10,10,0,0"
                Grid.Row="0"
                Grid.Column="1"
                Foreground="White"
                Text="Введите разультат"/>

                <WrapPanel
                Orientation="Horizontal"
                VerticalAlignment="Top"
                Margin="10"
                Grid.Row="1"
                Grid.Column="1">
                    <ui:NumberBox
                    Margin="0,0,10,10"
                    Height="34"
                    Grid.Column="0"
                    Name="numberboxPoints"
                    PlaceholderText="Очки"
                    Maximum="100"
                    Minimum="0"
                    Width="200"/>
                    <ui:TextBox
                    Margin="0,0,10,10"
                    Height="34"
                    Width="200"
                    BorderThickness="0"
                    Grid.Column="1"
                    Name="textboxTime"
                    PlaceholderText="Время"/>
                </WrapPanel>

                <StackPanel
                Margin="0,10,0,0"
                Orientation="Vertical"
                Grid.RowSpan="3"
                Grid.Column="2"
                VerticalAlignment="Top"
                    HorizontalAlignment="Center">
                    <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="18"
                    Text="Выбранный пилот"
                    Foreground="White"/>
                    <Border
                    Margin="0,10,0,0"
                    Name="pilotBorderImage"
                    Height="250"
                    Width="250"
                    CornerRadius="500"
                    BorderThickness="0">
                        <Border.Background>
                            <ImageBrush
                            Stretch="UniformToFill"/>
                        </Border.Background>
                    </Border>
                    <TextBlock
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Name="textblockNamePilot"
                    Foreground="White"/>
                </StackPanel>

                <StackPanel
                Margin="0,0,10,10"
                Orientation="Horizontal"
                Grid.Row="4"
                Grid.Column="3"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right">
                    <TextBlock
                    Name="Warn"
                    Foreground="Coral"
                    VerticalAlignment="Center"
                    Margin="0,0,10,0"/>
                    <ui:Button
                    BorderThickness="0"
                    Appearance="Transparent"
                    Margin="0,0,10,0"
                    Content="Сохранить" Click="Save"/>
                    <ui:Button
                    BorderThickness="0"
                    Appearance="Transparent"
                    Margin="0,0,10,0"
                    Name="ButtonDelete"
                    Content="Удалить" Click="Delete"/>
                    <ui:Button
                    BorderThickness="0"
                    Appearance="Transparent"
                    Content="Отмена" Click="Cancel"/>
                </StackPanel>
            </Grid>
        </Grid>
    </ui:DynamicScrollViewer>
</Page>
