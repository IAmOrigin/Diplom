<Page x:Class="_28._01ui.Pages.StartPage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_28._01ui.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1440"
      Title="StartPage1">

    <ui:DynamicScrollViewer>
        <Grid Background="{DynamicResource AppBackgroundColor}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto" MinHeight="405.496"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <Image
            Grid.Row="0"
            Grid.RowSpan="3"
                Height="700"
                VerticalAlignment="Top"
            Stretch="UniformToFill"
            Source="/images/ImageSlider/1.jpg" >
                <Image.OpacityMask>
                    
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0.4"/>
                        <GradientStop Color="Transparent" Offset="0.652"/>
                    </LinearGradientBrush>
                </Image.OpacityMask>
            </Image>
            <!--<Border
            Grid.Row="0"
            Grid.RowSpan="3"
            Margin="0,200,0,0"
            Height="500"
            VerticalAlignment="Top">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#00000000"/>
                        <GradientStop Color="#FF1B1B1B" Offset="0.475"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>-->

            <StackPanel
                Margin="70,90,0,60"
                Orientation="Vertical"
                Grid.Row="0">
                <TextBlock
                    Text="Добро пожаловать в мир автоспорта!"/>
                <TextBlock
                    Text="FastLane World"
                    FontSize="36"
                    FontWeight="SemiBold"/>
            </StackPanel>

            <StackPanel
            Orientation="Vertical"
            Grid.Row="1"
            Margin="70,0,0,0">
                <ui:Button
                BorderThickness="0"
                Margin="0,0,0,20"
                Width="500"
                Height="90"
                HorizontalContentAlignment="Left">
                    <StackPanel
                    Margin="10"
                    Orientation="Horizontal">
                        <ui:SymbolIcon
                        Symbol="FastAcceleration20"
                        FontSize="52"
                        Margin="0,0,10,0"/>
                        <StackPanel
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <TextBlock
                                FontWeight="SemiBold"
                                FontSize="16"
                                Text="События"/>
                            <TextBlock
                                FontSize="14"
                                TextWrapping="Wrap"
                                Text="Просмотр событий и бронирование мест"
                                Opacity="0.5"/>
                        </StackPanel>
                    </StackPanel>
                </ui:Button>
                <ui:Button
                BorderThickness="0"
                Margin="0,0,0,20"
                Width="500"
                Height="90"
                HorizontalContentAlignment="Left">
                    <StackPanel
                    Margin="10"
                    Orientation="Horizontal">
                        <ui:SymbolIcon
                        Symbol="Poll20"
                        FontSize="52"
                        Margin="0,0,10,0"/>
                        <StackPanel
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <TextBlock
                                FontWeight="SemiBold"
                                FontSize="16"
                                Text="Таблица лидеров"/>
                            <TextBlock
                                FontSize="14"
                                TextWrapping="Wrap"
                                Text="Просмотр результатов событий"
                                Opacity="0.5"/>
                        </StackPanel>
                    </StackPanel>
                </ui:Button>
                <ui:Button
                BorderThickness="0"
                Margin="0,0,0,20"
                Width="500"
                Height="90"
                HorizontalContentAlignment="Left">
                    <StackPanel
                    Margin="10"
                    Orientation="Horizontal">
                        <ui:SymbolIcon
                        Symbol="PeopleTeam20"
                        FontSize="52"
                        Margin="0,0,10,0"/>
                        <StackPanel
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <TextBlock
                                FontWeight="SemiBold"
                                FontSize="16"
                                Text="Команды"/>
                            <TextBlock
                                FontSize="14"
                                TextWrapping="Wrap"
                                Text="Зарегистрированные команды и их составы"
                                Opacity="0.5"/>
                        </StackPanel>
                    </StackPanel>
                </ui:Button>
                <ui:Button
                BorderThickness="0"
                Margin="0,0,0,20"
                Width="500"
                Height="90"
                HorizontalContentAlignment="Left">
                    <StackPanel
                    Margin="10"
                    Orientation="Horizontal">
                        <ui:SymbolIcon
                        Symbol="PeopleTeam20"
                        FontSize="52"
                        Margin="0,0,10,0"/>
                        <StackPanel
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <TextBlock
                                FontWeight="SemiBold"
                                FontSize="16"
                                Text="Команды"/>
                            <TextBlock
                                FontSize="14"
                                TextWrapping="Wrap"
                                Text="Зарегистрированные команды и их составы"
                                Opacity="0.5"/>
                        </StackPanel>
                    </StackPanel>
                </ui:Button>
                <ui:Button
                BorderThickness="0"
                Margin="0,0,0,20"
                Width="500"
                Height="90"
                HorizontalContentAlignment="Left">
                    <StackPanel
                    Margin="10"
                    Orientation="Horizontal">
                        <ui:SymbolIcon
                        Symbol="PeopleTeam20"
                        FontSize="52"
                        Margin="0,0,10,0"/>
                        <StackPanel
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <TextBlock
                                FontWeight="SemiBold"
                                FontSize="16"
                                Text="Команды"/>
                            <TextBlock
                                FontSize="14"
                                TextWrapping="Wrap"
                                Text="Зарегистрированные команды и их составы"
                                Opacity="0.5"/>
                        </StackPanel>
                    </StackPanel>
                </ui:Button>

            </StackPanel>



            <TextBlock
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,21,0,0"
            Text="Fastlane World" Height="19" Width="90"/>
        </Grid>
    </ui:DynamicScrollViewer>
</Page>
