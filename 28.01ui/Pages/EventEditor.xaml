<Page x:Class="_28._01ui.EventEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_28._01ui"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1440"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="EventEditor">

    <ui:DynamicScrollViewer>
        <Grid
            x:Name="animGrid">
            <Grid.RenderTransform>
                    <TranslateTransform Y="20"/>
                </Grid.RenderTransform>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="250"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border
                Name="imgborder"
                Margin="0,10,0,0"
                Grid.Column="1"
                Grid.Row="0"
                CornerRadius="10">
                <Border.Background>
                    <ImageBrush
                        Stretch="UniformToFill"
                        AlignmentY="Top"
                        AlignmentX="Left"/>
                </Border.Background>
                <ui:Button
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    CornerRadius="10"
                    Click="BtnImg"
                    Background="#07FFFFFF">
                    <TextBlock
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Text="+"
                        FontSize="42"
                        Foreground="White"/>
                </ui:Button>
            </Border>
            <Grid
                Margin="0,10,0,0"
                Grid.Row="1"
                Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <ui:TextBox
                    Margin="0,0,10,0"
                    Name="TBoxNameEvent"
                    Grid.Column="0"
                    BorderThickness="0"
                    FontWeight="SemiBold"
                    PlaceholderText="Название"/>
                <StackPanel
                    HorizontalAlignment="Right"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <ComboBox
                        Name="CBoxEventType"
                        BorderThickness="0"
                        Margin="0,0,10,0"
                        Width="180"/>
                    <ui:TextBox
                        Name="TBoxEventType"
                        BorderThickness="0"
                        PlaceholderText="Тип события"
                        Margin="0,0,10,0"
                        Width="180"/>
                    <ui:Button
                        BorderThickness="0"
                        Height="34"
                        Width="34"
                        Margin="0,0,10,0"
                        Content="+" Click="AddType"/>
                    <ui:Button
                        Name="BtnDeleteType"
                        Height="34"
                        Width="34"
                        BorderThickness="0"
                        Click="DeleteType">
                        <ui:SymbolIcon
                            Symbol="Delete20"
                            Foreground="White"/>
                    </ui:Button>
                </StackPanel>

            </Grid>

            <Grid
                Margin="0,10,0,0"
                Grid.Row="2"
                Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <ui:TextBox
                    Margin="0,0,10,0"
                    Name="TBoxLocate"
                    Grid.Column="0"
                    PlaceholderText="Локация"
                    BorderThickness="0"/>
                <TextBlock
                    Margin="0,0,10,0"
                    Grid.Column="1"
                    Text="Дата:"
                    Foreground="White"
                    VerticalAlignment="Center"/>
                <DatePicker
                    Margin="0,0,10,0"
                    Name="DPickerEvent"
                    Grid.Column="2"/>
                <ui:TextBox
                    Grid.Column="3"
                    PlaceholderText="Время"
                    BorderThickness="0"/>
            </Grid>
            <ui:TextBox
                TextWrapping="Wrap"
                Margin="0,10,0,0"
                Name="TBoxDesc"
                Grid.Row="3"
                Grid.Column="1"
                BorderThickness="0"
                PlaceholderText="Описание"/>
            <Grid
                Margin="0,10,0,0"
                Grid.Row="4"
                Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock
                    Margin="0,0,10,0"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Text="Количество мест"
                    Foreground="White"/>
                <ui:NumberBox
                    Margin="0,0,10,0"
                    Name="NBoxRemain"
                    Grid.Column="1"/>
                <TextBlock
                    Margin="0,0,10,0"
                    Grid.Column="2"
                    Text="Цена"
                    VerticalAlignment="Center"
                    Foreground="White"/>
                <ui:NumberBox
                    Name="NBoxPrice"
                    Grid.Column="3"/>
            </Grid>
            <StackPanel
                Margin="10"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Grid.Row="5"
                Grid.Column="1">
                <TextBlock
                    Margin="0,0,10,0"
                    Foreground="Coral"
                    Name="Warn"/>
                <ui:Button
                    Margin="0,0,10,0"
                    Content="Удалить"
                    Click="Delete"/>
                <ui:Button
                    Margin="0,0,10,0"
                    Content="Сохранить"
                    Click="Save"/>
                <ui:Button
                    Content="Отмена"
                    Click="Cancel"/>
            </StackPanel>
        </Grid>
    </ui:DynamicScrollViewer>
</Page>
