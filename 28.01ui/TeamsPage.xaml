<Page x:Class="_28._01ui.TeamsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_28._01ui"
      mc:Ignorable="d" 
      d:DesignHeight="900"
      d:DesignWidth="1400"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
      Title="DesignerPage">
    <ui:DynamicScrollViewer>
        <Grid
            Name="animGrid">

            <Grid.RenderTransform>
                <TranslateTransform Y="20"/>
            </Grid.RenderTransform>

            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>

            <Image
                Grid.Row="0"
                Grid.ColumnSpan="3"
                Stretch="UniformToFill"
                VerticalAlignment="Center"
                Source="/images/BackImages/7740.jpg" >
                <Image.Effect>
                    <BlurEffect Radius="10"/>
                </Image.Effect>
            </Image>

            <StackPanel
                Orientation="Vertical"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left"
                Margin="0,0,0,10"
                Grid.Column="1"
                Grid.Row="0">
                <TextBlock
                    Foreground="White"
                    Text="Команды"
                    FontSize="32"
                    FontWeight="SemiBold"/>
                <TextBlock
                    Foreground="White"
                    Text="Просмотр и редактирование команд"
                    FontSize="14"/>
            </StackPanel>

            <StackPanel
                Orientation="Horizontal"
                VerticalAlignment="Bottom"
                Margin="0,0,0,10"
                HorizontalAlignment="Right"
                Grid.Column="1"
                Grid.Row="0" Cursor="IBeam">
                <ui:TextBox
                    Name="SearchBox"
                    Height="35"
                    BorderThickness="0"
                    PlaceholderText="Поиск"
                    Width="230"
                    Background="#19FFFFFF"
                    TextChanged="SearchBox_TextChanged"/>
                <ui:Button
                    Name="btnAdd"
                    Height="35"
                    Width="35"
                    BorderThickness="0"
                    Margin="10,0,0,0"
                    Background="#19FFFFFF"
                    Click="btnAdd_Click"
                    Cursor="Arrow">
                    <ui:SymbolIcon
                        Symbol="Add20"/>
                </ui:Button>
            </StackPanel>

            <ui:ListView
                Margin="0,10,0,0"
                d:ItemsSource="{d:SampleData ItemCount=5}"
                Grid.Row="1"
                Grid.Column="1"
                Name="listviewteams">
                <ui:ListView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Name="teamBunner"
                            CornerRadius="8"
                            Height="120">
                            <Border.Background>
                                <ImageBrush
                                    Stretch="UniformToFill"
                                    AlignmentX="Center"
                                    AlignmentY="Center"
                                    ImageSource="{Binding TeamBunner}"/>
                            </Border.Background>
     
                            <ui:Button
                                Click="TeamClick"
                                BorderBrush="{x:Null}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Appearance="Transparent"
                                HorizontalContentAlignment="Left"
                                MouseOverBackground="#0AFFFFFF">
                                <StackPanel
                                    VerticalAlignment="Center"
                                    Orientation="Vertical"
                                    Margin="15">
                                    <TextBlock
                                    Foreground="White"
                                    FontSize="32"
                                    FontWeight="SemiBold"
                                    Text="{Binding TeamName}"
                                    FontStyle="Italic"/>
                                    <TextBlock
                                    Foreground="White"
                                    Text="{Binding TeamCountry}"/>
                                </StackPanel>
                            </ui:Button>

                        </Border>
                    </DataTemplate>
                </ui:ListView.ItemTemplate>
            </ui:ListView>
        </Grid>
    </ui:DynamicScrollViewer>
</Page>