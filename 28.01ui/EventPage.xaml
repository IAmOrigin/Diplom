<Page x:Class="_28._01ui.EventPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_28._01ui"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      Title="EventPage"
      d:DesignHeight="1080"
      d:DesignWidth="1920">

    <Grid Name="animGrid">

        <Grid.RenderTransform>
            <TranslateTransform Y="20"/>
        </Grid.RenderTransform>

        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
            <RowDefinition Height="55"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid
        Grid.Row="0"
        Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ui:TextBox
            Name="SearchBox"
            Margin="10,10,170,0"
            Grid.Column="1"
            Height="35"
                TextChanged="SearchBox_TextChanged"
                PlaceholderText="Поиск события"/>
        </Grid>

        <ui:ListView
        Margin="10,10,0,0"
        Grid.Column="0"
        Grid.Row="1"
        d:ItemsSource="{d:SampleData ItemCount=5}"
        BorderThickness="0"
        Name="LViewEvents"
            SelectionChanged="LViewEvents_SelectionChanged"
            SelectionMode="Single">
            <ui:ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel
                    Orientation="Vertical">
                        <TextBlock
                    Margin="5, 0,0,0"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="{Binding EventName}" />
                        <TextBlock
                    Margin="5,0,0,0"
                    FontSize="14"
                    Text="{Binding EventDate, StringFormat=dd MMM yyyy}" />
                        <StackPanel
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                            <ui:Button
                            Visibility="Visible"
                            Margin="0,10,0,10"
                            Name="BtnEditName"
                            Click="BtnEdit"
                            Content="Изменить"
                            Foreground="White"
                            BorderThickness="0"/>
                            <ui:Button
                            Click="BtnTicket"
                            Margin="10,0,10,0"
                            Content="Билет"
                            Foreground="White"
                            BorderThickness="0"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ui:ListView.ItemTemplate>
        </ui:ListView>

        <Grid
        Grid.Column="0"
        Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition
                Width="120"/>
            </Grid.ColumnDefinitions>
            <TextBlock
            Grid.Column="0"
            Margin="10,10,0,10"
            Name="Warn"
            TextWrapping="Wrap"
            Foreground="Coral"
            Text="Ошибки"
            VerticalAlignment="Center"
            HorizontalAlignment="Stretch"/>
            <Button
            Grid.Column="1"
            Name="BtnNewName"
            Click="BtnNew"
            Margin="10,10,0,10"
            BorderThickness="0"
            Height="35"
            Content="Добавить"
            HorizontalAlignment="Stretch"/>
        </Grid>

        <ui:DynamicScrollViewer
        Grid.Column="1"
        Grid.RowSpan="3">
            <StackPanel
        Margin="10"
        
        Orientation="Vertical">
                <Viewbox
                    MaxHeight="350">
                    <Image
            Name="eventImg"
            Stretch="Uniform"/>
                </Viewbox>

                <TextBlock
            Name="eventName"
            Margin="0,10,0,0"
            TextWrapping="Wrap"
            Text=""
            Foreground="White"/>

                <TextBlock
            Name="eventDate"
            Margin="0,10,0,0"
            TextWrapping="Wrap"
            Text=""
            Foreground="White"/>

                <TextBlock
            Name="eventLocation"
            Margin="0,10,0,0"
            TextWrapping="Wrap"
            Text=""
            Foreground="White"/>

                <TextBlock
            Name="eventType"
            Margin="0,10,0,0"
            TextWrapping="Wrap"
            Text=""
            Foreground="White"/>

                <TextBlock
            Name="eventDesc"
            Margin="0,10,0,0"
            TextWrapping="Wrap"
            Text=""
            Foreground="White"/>
            </StackPanel>
        </ui:DynamicScrollViewer>

        <TextBlock
        Name="selectEvent"
        Text="Выберите интересующее событие"
        Foreground="#FFA7A5A5"
        Grid.Column="1"
        Grid.RowSpan="3"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"/>
    </Grid>
</Page>
