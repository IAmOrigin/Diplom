<Page x:Class="_28._01ui.TicketWindowFolder.tPage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_28._01ui.TicketWindowFolder"
      mc:Ignorable="d" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      d:DesignHeight="450"
      d:DesignWidth="450"
      Title="tPage1">

    <Grid>
        <StackPanel
            HorizontalAlignment="Left"
            Orientation="Vertical">
            <TextBlock
                Text="ФИО держателя билета"/>
            <ui:TextBox
                Name="textBoxName"
                Margin="0,10,0,0"
                Width="345"
                BorderThickness="0"
                PlaceholderText="Фамилия Имя Отчество"/>
            <TextBlock
                Margin="0,20,0,0"
                Text="Номер телефона"/>
            <ui:TextBox
                Name="textBoxPhone"
                Margin="0,10,0,0"
                Width="345"
                BorderThickness="0"
                PlaceholderText="+7 ХХХ ХХ ХХ"/>
            <TextBlock
                Margin="0,20,0,0"
                Text="Email"/>
            <ui:TextBox
                Name="textBoxEmail"
                Margin="0,10,0,0"
                Width="345"
                BorderThickness="0"
                PlaceholderText="example@gmail.com"/>
        </StackPanel>
        <TextBlock
            Name="textBlockPrice"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Margin="0,0,0,70"
            Text="К оплате 800 рублей"/>
        <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom">
            <ui:Button
                BorderThickness="0"
                Width="100"
                Margin="0,0,20,0"
                Content="Далее"
                Click="Button_Next"/>
            <ui:Button
                BorderThickness="0"
                Width="100"
                Content="Отмена"
                Click="Button_Cancel"/>
        </StackPanel>
    </Grid>
</Page>
