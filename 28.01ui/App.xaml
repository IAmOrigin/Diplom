<Application x:Class="_28._01ui.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:_28._01ui"
             StartupUri="MainWindow.xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush x:Key="AppBackgroundColor" Color="#FF1B1B1B"/>
            <SolidColorBrush x:Key="AppDialogColor" Color="#FF141414"/>
            <SolidColorBrush x:Key="PopupColor" Color="#FF1B1B1B"/>
            <SolidColorBrush x:Key="AppTextColor" Color="White"/>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="{DynamicResource AppTextColor}"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
