<Page x:Class="_28._01ui.PilotEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_28._01ui"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="PilotEditor">

    <ui:DynamicScrollViewer>
        <Grid
            Name="animGrid">

            <Grid.RenderTransform>
                <TranslateTransform Y="20"/>
            </Grid.RenderTransform>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <StackPanel
                Name="stackNewTransfer"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Grid.Row="1"
                Grid.ColumnSpan="2">
                <ui:Button
                    Click="transferPilot"
                    BorderThickness="0"
                    Content="Перевести из другой команды"
                    Margin="0,0,10,0"
                    Appearance="Transparent"/>
                <ui:Button
                    Click="newPilot"
                    BorderThickness="0"
                    Content="Новый участник"
                    Appearance="Transparent"/>
            </StackPanel>

            <TextBlock
            Text="Добавление участника"
            Foreground="White"
                VerticalAlignment="Bottom"
                FontSize="26"
                FontWeight="Medium"
                Margin="60,0,0,0"
                Grid.Column="0"
                Grid.Row="0"/>

            <StackPanel
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Orientation="Vertical"
                Grid.ColumnSpan="2"
                Grid.Row="1" Width="900">
                <StackPanel
                    Name="stackNew"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">

                    <Border
                CornerRadius="500"
                Height="250"
                Width="250"
                Name="imgborder">
                        <Border.Background>
                            <ImageBrush
                    Stretch="UniformToFill"
                    ImageSource="/images/ProfileImages/p3.jpg"/>
                        </Border.Background>
                        <ui:Button
                    Click="AddImg"
                    Height="250"
                    Width="250"
                    CornerRadius="500"
                    Background="Transparent">
                            <TextBlock
                        Margin="0,0,2,12"
                        Text="+"
                        FontSize="48" Foreground="White"/>
                        </ui:Button>
                    </Border>

                    <ui:TextBox
                        Name="tboxName"
                Margin="0,10,0,0"
                BorderThickness="0"
                PlaceholderText="Имя участника"
                Width="250"
                Height="34"/>

                    <StackPanel
                Margin="0,10,0,0"
                Orientation="Horizontal">
                        <ui:TextBlock
                            Foreground="White"
                            Name="tboxBirtDate"
                            Text="Дата рождения"
                            VerticalAlignment="Center"
                            Margin="0,0,10,0"/>
                        <DatePicker
                            
                            Name="dpickerBirthDate"
                            Height="34"
                            BorderThickness="0" Width="155"/>
                    </StackPanel>

                    <StackPanel
                Margin="0,10,0,0"
                Orientation="Horizontal">
                        <ui:TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="Должность"
                        Width="80"
                        Foreground="White"
                        Margin="0,0,10,0"/>
                        <ComboBox
                            Name="comboRole"
                        Height="34"
                        Width="160"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel
                    HorizontalAlignment="Center"
                        Name="stackTransfer"
                        Orientation="Horizontal">
                        <StackPanel
                            Orientation="Vertical">
                            <TextBlock
                                Foreground="White"
                                Text="Команда"/>
                        <ui:ListView
                            Width="350"
                            Name="listviewTeams"
                            SelectionChanged="listviewTeams_SelectionChanged"
                            d:ItemsSource="{d:SampleData ItemCount=5}">
                            <ui:ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel
                                        Orientation="Horizontal">
                                        <Border
                                            CornerRadius="100"
                                            Height="70"
                                            Width="70">
                                            <Border.Background>
                                                <ImageBrush
                                                    Stretch="UniformToFill"
                                                    ImageSource="{Binding TeamLogo}"/>
                                            </Border.Background>
                                        </Border>
                                        <TextBlock
                                            Margin="10,0,50,10"
                                            VerticalAlignment="Center"
                                            Text="{Binding TeamName}"
                                            Foreground="White"
                                            FontWeight="Medium"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ui:ListView.ItemTemplate>
                        </ui:ListView>
                        </StackPanel>
                        <StackPanel
                            Width="350"
                            Orientation="Vertical">
                            <TextBlock
                                Foreground="White"
                                Text="Участник"/>
                        <ui:ListView
                                Name="listviewPilots"
                            d:ItemsSource="{d:SampleData ItemCount=5}">
                            <ui:ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel
                                        Orientation="Horizontal">
                                        <Border
                                            CornerRadius="100"
                                            Height="70"
                                            Width="70">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding PilotImg}"/>
                                            </Border.Background>
                                        </Border>
                                        <StackPanel
                                            Margin="10,0,50,10"
                                            VerticalAlignment="Center"
                                            Orientation="Vertical">
                                            <TextBlock
                                                Text="{Binding PilotName}"
                                                Foreground="White"
                                                FontWeight="Medium"/>
                                            <TextBlock
                                                Text="{Binding PilotRoles}"
                                                Foreground="White"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ui:ListView.ItemTemplate>
                        </ui:ListView>
                        </StackPanel>
                    </StackPanel>
            </StackPanel>

            <StackPanel
                Name="stackSaveCancel"
                Grid.Row="2"
                Grid.Column="1"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Margin="20"
                Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    Name="Warn"
                    Foreground="Coral"
                    Margin="0,0,10,0"
                    FontSize="12"/>
                <ui:Button
                    
                    BorderThickness="0"
                    Content="Сохранить"
                    Appearance="Transparent"
                    Margin="0,0,10,0" Click="btnSave"/>
                <ui:Button
                    Content="Отменить"
                    Appearance="Transparent"
                    BorderThickness="0" Click="btnCancel"/>
            </StackPanel>

        </Grid>
    </ui:DynamicScrollViewer>
</Page>
