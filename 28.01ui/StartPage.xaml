<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_28._01ui"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      x:Class="_28._01ui.StartPage"
      
      mc:Ignorable="d" 
      d:DesignHeight="1080"
      d:DesignWidth="1920"
      Title="StartPage">

    <Grid
        Name="animGrid">

        <Grid.RenderTransform>
            <TranslateTransform Y="20"/>
        </Grid.RenderTransform>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition
            Height="100"/>
            <RowDefinition
            Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image
        Name="imageDisplay"
        VerticalAlignment="Center"
        HorizontalAlignment="Center"
        Stretch="UniformToFill"
        Source="/images/ImageSlider/1.jpg"
        Grid.RowSpan="2"
        Grid.ColumnSpan="4"/>

        <StackPanel
        Grid.Row="1"
        Grid.ColumnSpan="2"
        Orientation="Vertical"
        VerticalAlignment="Bottom"
        Margin="10">
            <TextBlock
            Text="Добро пожаловать"
            Foreground="White"
            FontSize="16"/>
            <TextBlock
            Text="FastLane Manager"
            Foreground="White"
            FontSize="32"
            FontWeight="Bold"/>
        </StackPanel>


        <ui:Button
        Click="RaceBtn"
        Grid.Column="0"
        Grid.Row="2"
        BorderThickness="0"
        Margin="10,10,5,10"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        HorizontalContentAlignment="Left">
            <StackPanel
            Margin="10"
            Orientation="Horizontal">
                <ui:SymbolIcon
                Symbol="FastAcceleration20"
                FontSize="34"
                Margin="0,0,10,0"/>
                <StackPanel Orientation="Vertical">
                    <TextBlock
                    FontSize="14"
                    Text="Гонки"/>
                    <TextBlock
                    FontSize="12"
                    TextWrapping="Wrap"
                    Foreground="#FFA7A5A5"
                    Text="Предстоящие события"/>
                </StackPanel>
            </StackPanel>
        </ui:Button>
        <ui:Button
        Click="ArchiveBtn"
        Grid.Column="1"
        Grid.Row="2"
        BorderThickness="0"
        Margin="5,10"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        HorizontalContentAlignment="Left">
            <StackPanel
            Margin="10"
            Orientation="Horizontal">
                <ui:SymbolIcon
                Symbol="Folder20"
                FontSize="34"
                Margin="0,0,10,0"/>
                <StackPanel Orientation="Vertical">
                    <TextBlock
                    FontSize="14"
                    Text="Архив"/>
                    <TextBlock
                    FontSize="12"
                    TextWrapping="Wrap"
                    Foreground="#FFA7A5A5"
                    Text="Прошедшие события"/>
                </StackPanel>
            </StackPanel>
        </ui:Button>
        <ui:Button
        Click="RatingBtn"
        Grid.Column="2"
        Grid.Row="2"
        BorderThickness="0"
        Margin="5,10"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        HorizontalContentAlignment="Left">
            <StackPanel
            Margin="10"
            Orientation="Horizontal">
                <ui:SymbolIcon
                Symbol="Poll20"
                FontSize="34"
                Margin="0,0,10,0"/>
                <StackPanel Orientation="Vertical">
                    <TextBlock
                    FontSize="14"
                    Text="Рейтинг"/>
                    <TextBlock
                    FontSize="12"
                    TextWrapping="Wrap"
                    Foreground="#FFA7A5A5"
                    Text="Таблица лидеров"/>
                </StackPanel>
            </StackPanel>
        </ui:Button>
        <ui:Button
        Click="TeamsBtn"
        Grid.Column="3"
        Grid.Row="2"
        BorderThickness="0"
        Margin="5,10,10,10"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        HorizontalContentAlignment="Left">
            <StackPanel
            Margin="10"
            Orientation="Horizontal">
                <ui:SymbolIcon
                Symbol="PeopleTeam20"
                FontSize="34"
                Margin="0,0,10,0"/>
                <StackPanel Orientation="Vertical">
                    <TextBlock
                    FontSize="14"
                    Text="Команды"/>
                    <TextBlock
                    FontSize="12"
                    TextWrapping="Wrap"
                    Foreground="#FFA7A5A5"
                    Text="Команды и их состав"/>
                </StackPanel>
            </StackPanel>
        </ui:Button>
    </Grid>
</Page>
