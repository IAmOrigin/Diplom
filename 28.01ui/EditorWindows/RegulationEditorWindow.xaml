<Window x:Class="_28._01ui.EditorWindows.RegulationEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_28._01ui.EditorWindows"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Редактирование"
        Height="680"
        Width="600"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid
        Background="{DynamicResource AppDialogColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock
            Margin="20,20,0,20"
            FontSize="24"
            FontWeight="SemiBold"
            Text="Регламент"
            Grid.Row="0"/>
        <ui:DynamicScrollViewer
            Grid.Row="1">
            <StackPanel
                Margin="20,0,20,0"
                Orientation="Vertical">
                <ui:TextBox
                    Margin="0,0,0,20"
                    Name="resultTextBox"
                    BorderThickness="0"
                    MinHeight="400"
                    TextWrapping="Wrap"
                    PlaceholderText="Описание требований"/>
                <StackPanel
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        Text="Дата проведения Технического осмотра:"
                        Margin="0,0,20,0"/>
                    <DatePicker
                        Name="resultDatePicker"
                        BorderThickness="0"
                        Width="180"/>
                </StackPanel>
            </StackPanel>
            
            
        </ui:DynamicScrollViewer>
        <StackPanel
            Margin="0,20,20,20"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            Grid.Row="2">
            <ui:Button
                Name="buttonSave"
                Margin="0,0,20,0"
                HorizontalAlignment="Right"
                Content="Сохранить"
                Width="100"
                BorderThickness="0"
                Click="buttonSave_Click"/>
            <ui:Button
                Name="buttonCancel"
                HorizontalAlignment="Right"
                Content="Отмена"
                Width="100"
                BorderThickness="0"
                Click="buttonCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
