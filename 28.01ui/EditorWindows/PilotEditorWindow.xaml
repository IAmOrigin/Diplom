<ui:FluentWindow x:Class="_28._01ui.EditorWindows.PilotEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_28._01ui.EditorWindows"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="PilotEditorWindow"
                 WindowStyle="None"
                 ResizeMode="NoResize"
                 WindowStartupLocation="CenterScreen"
                 Height="470"
                 Width="870"
                 Background="{x:Null}">
    <Grid
        Background="{DynamicResource AppBackgroundColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="183*"/>
            <ColumnDefinition Width="287*"/>
        </Grid.ColumnDefinitions>
        <TextBlock
            Margin="20,20,20,20"
            Text="Участник"
            FontSize="24"
            FontWeight="SemiBold"/>
        <StackPanel
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Orientation="Vertical" Height="308" Width="250">
            <Border
                CornerRadius="300"
                Height="250"
                Width="250" Background="#FF383838"/>
            <TextBlock
                Margin="20"
                HorizontalAlignment="Center"
                Text="Фото профиля"/>
        </StackPanel>
        <StackPanel
            Width="420"
            HorizontalAlignment="Left"
            Margin="0,70,0,0"
            Grid.Column="1">
            <ui:TextBox
                PlaceholderText="Имя"
                BorderThickness="0"/>
            <ui:TextBox
                Margin="0,20,0,0"
                PlaceholderText="Фамилия"
                BorderThickness="0"/>
            <ui:TextBox
                Margin="0,20,0,0"
                PlaceholderText="Дата рождения"
                BorderThickness="0"/>
            <ui:TextBox
                Margin="0,20,0,0"
                PlaceholderText="Город"
                BorderThickness="0"/>
            <ui:TextBox
                Margin="0,20,0,0"
                PlaceholderText="О себе"
                BorderThickness="0"/>
            <ui:TextBox
                Margin="0,20,0,0"
                PlaceholderText="Должность"
                BorderThickness="0"/>
        </StackPanel>
        <StackPanel
            Grid.Column="1"
            Margin="0,0,20,20"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom" Height="32" Width="210">
            <ui:Button
                Width="110"
                Margin="0,0,10,0"
                Content="Сохранить"/>
            <ui:Button
                Width="90"
                Content="Отмена"
                Click="Button_Cancel"/>
        </StackPanel>
    </Grid>
</ui:FluentWindow>
