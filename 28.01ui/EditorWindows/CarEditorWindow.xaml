<Window x:Class="_28._01ui.EditorWindows.CarEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_28._01ui.EditorWindows"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        WindowStyle="None"
        Title="CarEditorWindow"
                 Height="360"
                 Width="550"
                 ResizeMode="NoResize"
                 WindowStartupLocation="CenterScreen" Background="{x:Null}">
    <Grid Background="{DynamicResource AppBackgroundColor}">
        <StackPanel
            HorizontalAlignment="Left"
            Margin="20"
            Orientation="Vertical">
            <TextBlock
                FontWeight="SemiBold"
                Text="Автомобиль"
                FontSize="24"/>
            <ui:TextBox
                Margin="0,20,0,0"
                BorderThickness="0"
                Width="420"
                PlaceholderText="Название"/>
            <ui:TextBox
                Margin="0,20,0,0"
                BorderThickness="0"
                Width="420"
                PlaceholderText="Двигатель"/>
            <ui:TextBox
                Margin="0,20,0,0"
                BorderThickness="0"
                Width="420"
                PlaceholderText="Рабочий объем двигателя (л)" Cursor="IBeam"/>
            <ui:TextBox
                Margin="0,20,0,0"
                BorderThickness="0"
                Width="420"
                PlaceholderText="Мощность (л.с.)"/>
        </StackPanel>
        <StackPanel
            Margin="20"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom">
            <ui:Button
                Width="110"
                Margin="0,0,10,0"
                Content="Сохранить"/>
            <ui:Button
                Width="90"
                Content="Отмена"
                Click="Button_Cancel"/>
        </StackPanel>
    </Grid>
</Window>
