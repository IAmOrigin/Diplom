<ui:FluentWindow x:Name="fluentWindow" x:Class="_28._01ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_28._01ui"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local1="clr-namespace:_28._01ui.Classes"
        mc:Ignorable="d"
        Title="FastLane world"
        Height="500"
        Width="900"
        MinHeight="450"
        MinWidth="750"
        Background="{x:Null}">
    <ui:FluentWindow.Resources>
        <local1:SubtractWidthConverter x:Key="SubtractWidthConverter" />
    </ui:FluentWindow.Resources>

    <Grid
        Background="{DynamicResource AppBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="48"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="70"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid
            Grid.Row="0"
            Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="auto"/>
                <ColumnDefinition
                    Width="*"/>
            </Grid.ColumnDefinitions>

            <ui:TitleBar
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                Title="FastLane World">
                <ui:TitleBar.Icon>
                    <ui:ImageIcon Source="icon.ico" />
                </ui:TitleBar.Icon>
            </ui:TitleBar>

            <ui:Button
                Name="buttonback"
                Click="btnback"
                Grid.Column="0"
                BorderThickness="0"
                Appearance="Transparent"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="5"
                Width="35"
                Height="35">
                <ui:SymbolIcon
                    Symbol="ArrowLeft20"
                    FontSize="17"/>
            </ui:Button>
        </Grid>

        <ui:NavigationView
        Grid.Row="1"
        Grid.ColumnSpan="2"
        IsBackButtonVisible="Collapsed"
        IsPaneToggleVisible="False"
        PaneDisplayMode="LeftFluent"
            OverridesDefaultStyle="False">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem
                Margin="0,5,0,5"
                Click="HomeClick">
                    <StackPanel
                    Orientation="Vertical"
                    VerticalAlignment="Center"
                    Margin="0,-23,0,0">
                        <ui:SymbolIcon
                        Symbol="Home20"
                        FontSize="26"/>
                        <ui:TextBlock
                        Text="Главная"
                        FontSize="11"/>
                    </StackPanel>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>
            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem
                    Name="testButton" Click="testButton_Click">
                    <TextBlock
                        Text="Тест"/>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem
                    Name="themeButton"
                    Margin="0,0,0,5"
                    Click="themeButton_Click">
                    <StackPanel
                        Orientation="Vertical"
                        VerticalAlignment="Center"
                        Margin="0,-23,0,0">
                        <ui:SymbolIcon
                            Symbol="WeatherSunny20"
                            FontSize="26"/>
                        <ui:TextBlock
                            Text="Тема"
                            FontSize="11"/>
                    </StackPanel>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem
                    Name="profilebtn"
                    Margin="0,0,0,5"
                    Click="ProfileClick">
                    <StackPanel
                        Orientation="Vertical"
                        VerticalAlignment="Center"
                        Margin="0,-23,0,0">
                        <ui:SymbolIcon
                            Symbol="Person20"
                            FontSize="26"/>
                        <ui:TextBlock
                            Text="Профиль"
                            FontSize="11"/>
                    </StackPanel>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem
                    Name="loginbtn"
                    Margin="0,0,0,5"
                    Click="LoginClick">
                    <StackPanel
                        Orientation="Vertical"
                        VerticalAlignment="Center"
                        Margin="0,-23,0,0">
                        <ui:SymbolIcon
                            Symbol="ArrowEnter20"
                            FontSize="26"/>
                        <ui:TextBlock
                            Text="Войти"
                            FontSize="11"/>
                    </StackPanel>
                </ui:NavigationViewItem>
            </ui:NavigationView.FooterMenuItems>
        </ui:NavigationView>

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            VerticalAlignment="Center"
            Foreground="Coral"
            Text=""
            Name="Warn"/>

        <Popup
            AllowsTransparency="True"
            Name="popup1"
            StaysOpen="False"
            PopupAnimation="Fade"
            VerticalOffset="-80"
            HorizontalOffset="90"
            Margin="10"
            Width="{Binding ActualWidth,
            Converter={StaticResource SubtractWidthConverter},
            ElementName=MainFrame,
            Mode=OneWay}">
            <Border
                Height="70"
                CornerRadius="10"
                Background="{DynamicResource AppDialogColor}">
                <Grid
                    Margin="20,0,10,0">
                    <StackPanel
                        Orientation="Horizontal">
                        <ui:SymbolIcon
                            FontWeight="SemiBold"
                            Symbol="Alert20"
                            FontSize="28"/>
                        <StackPanel
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <TextBlock
                                Name="popupHeaderTextBlock"
                                Text="Предупрждение"
                                FontSize="16"
                                FontWeight="SemiBold"/>
                            <TextBlock
                                Name="popupTextBlock"
                                VerticalAlignment="Center"
                                Text="Предупрждение об ошибке"/>
                        </StackPanel>
                    </StackPanel>
                    <ui:Button
                        Margin="0,0,10,0"
                        Click="ClosePopup"
                        BorderThickness="0"
                        Height="37"
                        Width="37"
                        Appearance="Transparent"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                        <ui:SymbolIcon
                        FontWeight="SemiBold"
                        Symbol="Dismiss20"/>
                    </ui:Button>
                </Grid>
            </Border>
        </Popup>

        <Popup
            AllowsTransparency="True"
            Name="switchPopup"
            StaysOpen="False"
            PopupAnimation="Fade"
            VerticalOffset="-60"
            HorizontalOffset="70"
            Margin="10"
            Width="{Binding ActualWidth, ElementName=MainFrame, Mode=OneWay}">
            <Border
                Height="70"
                CornerRadius="10"
                Background="{DynamicResource AppBackgroundColor}">
                <Grid
                    Margin="20,0,10,0">
                    <TextBlock
                        Name="sss"
                        VerticalAlignment="Center"
                        Text="Вы уверенны в своих действиях? У этого будут последствия..."/>
                    <StackPanel
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                        <ui:Button
                            Margin="15,0"
                            BorderThickness="0"
                            Content="Да"
                            Width="60"/>
                        <ui:Button
                            BorderThickness="0"
                            Width="70"
                            Content="Нет"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>

        <Frame
            Name="MainFrame"
            Grid.Row="1"
            Grid.Column="1"/>

    </Grid>
</ui:FluentWindow>
