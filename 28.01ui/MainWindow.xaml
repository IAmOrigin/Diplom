<ui:FluentWindow x:Class="_28._01ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_28._01ui"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="FastLane world"
        Height="500"
        Width="900"
        MinHeight="450"
        MinWidth="750"
        Background="{x:Null}">

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition
                Height="48"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="70"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid
            Grid.Row="0"
            Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="auto"/>
                <ColumnDefinition
                    Width="*"/>
            </Grid.ColumnDefinitions>

            <ui:TitleBar
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                Title="FastLane World">
                <ui:TitleBar.Icon>
                    <ui:ImageIcon Source="icon.ico" />
                </ui:TitleBar.Icon>
            </ui:TitleBar>

            <ui:Button
                Name="buttonback"
                Click="btnback"
                Grid.Column="0"
                BorderThickness="0"
                Appearance="Transparent"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="5"
                Width="35"
                Height="35">
                <ui:SymbolIcon
                    Symbol="ArrowLeft20"/>
            </ui:Button>
        </Grid>

        <ui:NavigationView
        Grid.Row="1"
        Grid.ColumnSpan="2"
        IsBackButtonVisible="Collapsed"
        IsPaneToggleVisible="False"
        PaneDisplayMode="LeftFluent"
            OverridesDefaultStyle="False">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem
                Margin="0,5,0,5"
                Click="HomeClick">
                    <StackPanel
                    Orientation="Vertical"
                    VerticalAlignment="Center"
                    Margin="0,-23,0,0">
                        <ui:SymbolIcon
                        Symbol="Home20"
                        FontSize="26"/>
                        <ui:TextBlock
                        Text="Главная"
                        FontSize="11"/>
                    </StackPanel>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>
            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem
                    Name="themeButton"
                    Margin="0,0,0,5" Click="themeButton_Click">
                    <StackPanel
    Orientation="Vertical"
    VerticalAlignment="Center"
    Margin="0,-23,0,0">
                        <ui:SymbolIcon
        Symbol="WeatherSunny20"
        FontSize="26"/>
                        <ui:TextBlock
        Text="Тема"
        FontSize="11"/>
                    </StackPanel>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem
                    Name="profilebtn"
                Margin="0,0,0,5"
                Click="ProfileClick">
                    <StackPanel
                    Orientation="Vertical"
                    VerticalAlignment="Center"
                    Margin="0,-23,0,0">
                        <ui:SymbolIcon
                        Symbol="Person20"
                        FontSize="26"/>
                        <ui:TextBlock
                        Text="Профиль"
                        FontSize="11"/>
                    </StackPanel>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem
                Name="loginbtn"
                Margin="0,0,0,5"
                Click="LoginClick">
                    <StackPanel
                    Orientation="Vertical"
                    VerticalAlignment="Center"
                    Margin="0,-23,0,0">
                        <ui:SymbolIcon
                        Symbol="ArrowEnter20"
                        FontSize="26"/>
                        <ui:TextBlock
                        Text="Войти"
                        FontSize="11"/>
                    </StackPanel>
                </ui:NavigationViewItem>
            </ui:NavigationView.FooterMenuItems>
        </ui:NavigationView>

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            VerticalAlignment="Center"
            Foreground="Coral"
            Text=""
            Name="Warn"/>

        <Frame
            Name="MainFrame"
            Grid.Row="1"
            Grid.Column="1"/>

    </Grid>
</ui:FluentWindow>
